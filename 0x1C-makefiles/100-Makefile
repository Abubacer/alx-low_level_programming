CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
HAS_M_H := $(wildcard m.h)

ifneq ($(HAS_M_H),"")

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.PHONY: clean
clean:
	$(RM) -f $(NAME) *~

.PHONY: oclean
oclean:
	$(RM) -f $(OBJ)

.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: oclean all

endif
